<body>
  <div class="container">
    <header class="card">
      <h1>จองคอร์สอาหาร Double Chic Hotel</h1>
      <p style="margin:0;color:var(--muted)">เลือกคอร์สที่ต้องการ แล้วยืนยันการจองพร้อมช่องทางชำระเงิน</p>
    </header>

    <div class="grid" style="margin-top:16px">
      <main class="card">
        <h2 style="margin-top:0">1. เลือกคอร์สอาหาร (5 คอร์ส)</h2>
        <div class="courses" id="courses">
          <!-- course cards injected by JS -->
        </div>
      </main>

      <aside class="card">
        <h2 style="margin-top:0">2. ยืนยันการจองและชำระเงิน</h2>

        <div class="field">
          <label>คอร์สที่เลือก:</label>
          <div id="selectedCourse" class="summary">- ยังไม่ได้เลือก -</div>
        </div>

        <div class="field">
          <label>ราคาต่อท่าน (บาท)</label>
          <div id="pricePerPerson" class="summary">-</div>
        </div>

        <div class="field">
          <label>จำนวนผู้เข้าใช้บริการ (ท่าน)</label>
          <input id="qty" type="number" min="1" value="1" />
        </div>

        <div class="field">
          <label>เลือกวันมารับประทาน</label>
          <input id="date" type="date" />
        </div>

        <div class="field">
          <label>อีเมล (ใช้เป็นช่องทางการยืนยันการจอง)</label>
          <input id="email" type="email" placeholder="you@example.com" />
        </div>

        <div class="field">
          <label>ช่องทางการชำระเงิน</label>
          <select id="payMethod">
            <option value="qr">QR Code</option>
            <option value="bank">โอนเงินผ่านธนาคาร</option>
          </select>
        </div>

        <div id="bankInfo" class="field hidden">
          <label>บัญชีธนาคาร</label>
          <div class="summary">
            ธนาคาร: Double Chic Hotel<br/>
            เลขที่บัญชี: 1234567890
          </div>
        </div>

        <div id="qrBlock" class="field">
          <label>โปรดสแกน QR Code เพื่อชำระเงิน</label>
          <!-- ใส่ QR code จริงหรือรูปได้ที่ src -->
          <img id="qrImage" class="qr" src="https://via.placeholder.com/400x400.png?text=QR+Code" alt="QR Code สำหรับชำระเงิน">
        </div>

        <div class="field">
          <label>ยอดเงินรวมทั้งหมด</label>
          <div id="total" class="summary">0 บาท</div>
        </div>

        <div style="display:flex;gap:10px;align-items:center">
          <button id="confirmBtn" class="btn">ยืนยันการจอง</button>
          <button id="resetBtn" class="btn secondary">รีเซ็ต</button>
        </div>

        <div id="complete" class="hidden" style="margin-top:12px">
          <h3>การจองเสร็จสมบูรณ์!</h3>
          <p class="summary">รายละเอียดการจองจะถูกส่งไปยังอีเมลของคุณ</p>
          <div id="receipt" class="summary"></div>
        </div>

      </aside>
    </div>

    <footer class="card" style="margin-top:14px">
      <strong>หมายเหตุ:</strong> โปรดตรวจสอบรายละเอียด ก่อนยืนยันการจอง
    </footer>
  </div>

  <script>
    // ตัวอย่างข้อมูลคอร์ส (ใส่ภาพจริงและข้อมูลจริงได้)
    const courses = [
      { id: 'thai', title: 'Thai Course', price: 450, desc: 'สัมผัสรสชาติจัดจ้านแบบไทยดั้งเดิม', img: 'https://via.placeholder.com/800x600.png?text=Thai+Course' },
      { id: 'american', title: 'American Course', price: 520, desc: 'เมนูคลาสสิกสไตล์อเมริกัน', img: 'https://via.placeholder.com/800x600.png?text=American+Course' },
      { id: 'chinese', title: 'Chinese Course', price: 480, desc: 'อาหารจีนตำรับโบราณรสเลิศ', img: 'https://via.placeholder.com/800x600.png?text=Chinese+Course' },
      { id: 'french', title: 'French Course', price: 750, desc: 'ศิลปะแห่งการทำอาหารฝรั่งเศส', img: 'https://via.placeholder.com/800x600.png?text=French+Course' },
      { id: 'omakase', title: 'Omakase Course', price: 1200, desc: 'ประสบการณ์สุดพิเศษจากเชฟ', img: 'https://via.placeholder.com/800x600.png?text=Omakase+Course' }
    ];

    const coursesContainer = document.getElementById('courses');
    const selectedCourseEl = document.getElementById('selectedCourse');
    const pricePerPersonEl = document.getElementById('pricePerPerson');
    const qtyInput = document.getElementById('qty');
    const totalEl = document.getElementById('total');
    const payMethod = document.getElementById('payMethod');
    const bankInfo = document.getElementById('bankInfo');
    const qrBlock = document.getElementById('qrBlock');
    const confirmBtn = document.getElementById('confirmBtn');
    const resetBtn = document.getElementById('resetBtn');
    const complete = document.getElementById('complete');
    const receipt = document.getElementById('receipt');
    let selected = null;

    function renderCourses(){
      courses.forEach(c=>{
        const el = document.createElement('div');
        el.className = 'course';
        el.innerHTML = `
          <img src="${c.img}" alt="${c.title}">
          <h3>${c.title}</h3>
          <p>${c.desc}</p>
          <div style="margin-top:auto;display:flex;justify-content:space-between;align-items:center">
            <div style="font-weight:600">${c.price} ฿</div>
            <button class="btn" data-id="${c.id}">จองคอร์ส</button>
          </div>
        `;
        coursesContainer.appendChild(el);
      });

      coursesContainer.addEventListener('click', (e)=>{
        const btn = e.target.closest('button[data-id]');
        if(!btn) return;
        const id = btn.dataset.id;
        selectCourse(id);
        window.scrollTo({top:0,behavior:'smooth'});
      });
    }

    function selectCourse(id){
      selected = courses.find(c=>c.id===id);
      selectedCourseEl.textContent = `${selected.title}`;
      pricePerPersonEl.textContent = `${selected.price} บาท`;
      updateTotal();
    }

    function updateTotal(){
      const qty = Math.max(1, parseInt(qtyInput.value) || 1);
      const total = selected ? selected.price * qty : 0;
      totalEl.textContent = `${total} บาท`;
    }

    qtyInput.addEventListener('input', updateTotal);
    payMethod.addEventListener('change', ()=>{
      const val = payMethod.value;
      if(val === 'bank'){ bankInfo.classList.remove('hidden'); qrBlock.classList.add('hidden'); }
      else { bankInfo.classList.add('hidden'); qrBlock.classList.remove('hidden'); }
    });

    confirmBtn.addEventListener('click', ()=>{
      const email = document.getElementById('email').value.trim();
      const date = document.getElementById('date').value;
      if(!selected){ alert('กรุณาเลือกคอร์สก่อน'); return; }
      if(!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)){ alert('กรุณากรอกอีเมลที่ถูกต้อง'); return; }
      if(!date){ alert('กรุณาเลือกวันที่'); return; }
      // ในระบบจริง: จะส่งข้อมูลไป server หรือส่งอีเมล ยืนยันการจอง
      const qty = Math.max(1, parseInt(qtyInput.value) || 1);
      const total = selected.price * qty;
      receipt.innerHTML = `
        <strong>คอร์ส:</strong> ${selected.title}<br/>
        <strong>จำนวนผู้เข้าใช้บริการ:</strong> ${qty} ท่าน<br/>
        <strong>ยอดเงินรวมที่ต้องชำระ:</strong> ${total} บาท<br/>
        <strong>วันที่:</strong> ${date}<br/>
        <strong>ช่องทางชำระเงิน:</strong> ${payMethod.value === 'qr' ? 'QR Code' : 'โอนผ่านธนาคาร'}<br/>
        <strong>อีเมลยืนยัน:</strong> ${email}
      `;
      complete.classList.remove('hidden');
      // Clear form if you want:
      // selected = null; // keep selected to show receipt
    });

    resetBtn.addEventListener('click', ()=>{
      selected = null;
      selectedCourseEl.textContent = '- ยังไม่ได้เลือก -';
      pricePerPersonEl.textContent = '-';
      qtyInput.value = 1;
      totalEl.textContent = '0 บาท';
      document.getElementById('date').value = '';
      document.getElementById('email').value = '';
      payMethod.value = 'qr';
      bankInfo.classList.add('hidden');
      qrBlock.classList.remove('hidden');
      complete.classList.add('hidden');
      receipt.innerHTML = '';
    });

    // init
    renderCourses();
    updateTotal();
  </script>
</body>
</html>
