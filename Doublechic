  <style>
    :root{
      --bg:#f7f7f9; --card:#fff; --accent:#c0392b; --muted:#666;
      font-family: "Noto Sans Thai", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    body{margin:0;background:var(--bg);color:#111}
    .container{max-width:980px;margin:36px auto;padding:20px}
    header h1{margin:0 0 12px;font-size:28px}
    .grid{display:grid;grid-template-columns:1fr 360px;gap:20px}
    .card{background:var(--card);border-radius:10px;padding:18px;box-shadow:0 6px 18px rgba(10,10,20,0.06)}
    .courses{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:14px}
    .course{border:1px solid #eee;border-radius:8px;padding:12px;display:flex;flex-direction:column;gap:8px}
    .course img{width:100%;height:120px;object-fit:cover;border-radius:6px}
    .course h3{margin:0;font-size:18px}
    .course p{margin:0;color:var(--muted);font-size:14px}
    .btn{display:inline-block;padding:8px 12px;border-radius:8px;background:var(--accent);color:#fff;text-decoration:none;border:none;cursor:pointer}
    .btn.secondary{background:#2d6a9a}
    form .field{margin-bottom:10px}
    label{display:block;font-size:13px;color:var(--muted);margin-bottom:6px}
    input[type="number"], input[type="email"], input[type="date"], select{width:100%;padding:8px;border-radius:8px;border:1px solid #ddd}
    .summary{font-size:14px;color:#222}
    .qr{display:block;margin:8px 0;width:200px;height:200px;background:#eee;border-radius:8px;object-fit:contain}
